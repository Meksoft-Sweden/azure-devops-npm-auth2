{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["dist/"],
  "include": ["**/*.ts", "!**/*.test.ts"]
}